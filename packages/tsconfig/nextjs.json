{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "FineJS NextJS TSConfig",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}