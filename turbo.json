{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/tsconfig.json"
  ],
  "globalDotEnv": [
    ".env",
    ".env.local"
  ],
  "globalEnv": [
    "PORT",
    "HOST",
    "NODE_ENV",
    "REDIS_URL",
    "API_*",
    "NEXT_PUBLIC_*",
    "!NEXT_PUBLIC_GIT_*"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "start": {
      "cache": false
    }
  }
}
